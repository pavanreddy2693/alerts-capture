<!DOCTYPE html>
<html>
  <head>
    <title>Alerts-Capture: Summary</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <link rel='stylesheet' href="../public/stylesheets/style.css">

  </head>
  <body style="color: steelblue;">
    <nav class="navbar navbar-expand-sm" style="background-color:lightgray;">
        <a href="/errors/all" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-size: 40px;color: indigo;" class="nav-link">Alerts Capture</a>
        <a href="/errors/all" class="nav-link active" style="color: indigo;">All alerts</a>
        <a href="/errors/summary" class="nav-link" style="color: indigo;">Summary</a>
        <a href="/add" class="nav-link" style="color: indigo;">Add Alert</a>
        
        <a href="/users/logout" class="nav-link" style="color: indigo;">logout</a>

    </nav>
    <div style="align-items: center;" class="ml-5 py-5">
      <form action="/alerts/filter" method="GET">
        <span>Filter by Type</span>
        <div style="width: 150px;" class="d-inline-block">
         
            <select name="type" class="form-control mx-2">
          <option value="">ALL</option>
          <option value="type">type1</option>
        
        </select>
        </div>
    
          <span class="mx-5">Filter by Date Range</span>
      <div class="d-inline-block mx-2" style="width: 180px;">
          <input type="date" name="datefrom" class="form-control"/>
      </div>
      <div class="d-inline-block mx-2" style="width: 180px;">
        <input type="date" name="dateto" class="form-control"/>
    </div>
        
      <div class="d-inline-block mx-2" style="width: 100px;">
     <input type="submit" value="submit"/>
    </div>
    </form>
    </div>
   



<div class="row mt-3">
  <div class="col-sm-12 col-md-5" style="box-shadow: 0 0 10px;">
    <span style="font-weight: bold; padding: 10px;" class="my-5">Count of Each Alert</span>
    <div>   
      <table class="table m-auto text-dark">
        <thead>
          
          <th scope="col" class="col-sm-10 col-md-10">Alert Name</th>
          <th scope="col" class="col-sm-2 col-md-2">Count</th>
        </thead>
        <tbody>
      <% summaryalerts.forEach((summaryalert) => { %>
        <tr>

        <td style="width: 15%;" class="col-sm-10 col-md-10"><%= summaryalert._id %></td>
        <td style="width: 70%;" class="col-sm-2 col-md-2"><%= summaryalert.count %></td>
      </tr>
      <% });%>
        </tbody>
      </table>
      </div>

  </div>



  
  <div class="col-sm-12 col-md-7" style="box-shadow: 0 0 10px;">
    <span style="font-weight: bold; padding: 10px;" class="my-5">5xx API and Count</span>
    <div>   
      <table class="table m-auto">
        <thead>
          <th scope="col" class="col-sm-10 col-md-10">API</th>
          <th scope="col" class="col-sm-2 col-md-2">Count</th>
        </thead>
        <tbody>
          <% apis.forEach((api) => { %>
        <tr>
        <td style="width: 15%;" class="col-sm-10 col-md-10"><%= api._id %></td>
        <td style="width: 70%;" class="col-sm-2 col-md-2"><%= api.count %></td>
      </tr>
      <% });%>
        </tbody>
      </table>
      </div>
  </div>




</div>





  


  </body>
</html>
