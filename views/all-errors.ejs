<!DOCTYPE html>
<html>
  <head>
    <title>Alerts-Capture: All Alerts</title>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/style.css"/>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
 
  <script src="../routes/index.js"></script>
 

  </head>
  <body>

    <% include ./partials/messages %>



    <nav class="navbar navbar-expand-lg bg-secondary navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/errors/all">Alerts Capture</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item"><a href="/add" class="nav-link">Add Alert</a></li>
            <li class="nav-item"> <a href="/errors/all" class="nav-link active">View Alerts</a></li>
            <li class="nav-item"> <a href="/errors/triggered" class="nav-link">5xx API</a></li>
            
            <li> <a href="/users/logout" class="nav-link">logout</a></li>
            
          </ul>
        </div>
      </div>
    </nav>

    



    
    <div style="align-items: center; font-size: 12px;" class="py-5">
      <form action="/alerts/filter" method="GET" class="row form">
        <div class="row">
        <div class="d-inline-block col-sm-12 col-md-4 my-1">

          <span class="text-info mx-2  my-1" style="font-size: medium;"><b>Filters :</b></span>
         
          <select name="type" style="height: 25px;" class="d-inline-block  my-1">
          <option value="">Alert Type</option>
          <option value="type1">type1</option>
          <option value="type2">type2</option>
        
        </select>
       
          <input type="text" class="d-inline-block mx-2  my-1" placeholder="Alert Name" name="alertname"/>
        </div>
    
         
      <div class="d-inline col-sm-12 col-md-3  my-1">
        <span class="mx-2 d-inline-block  my-1">Date From</span>
          <input type="date" name="datefrom"  class="d-inline-block mx-2  my-1" style="height: 25px; width: 120px;"/>
      </div>

      
      <div class="d-inline col-sm-12 col-md-3  my-1">
        <span class="mx-2  my-1">Date To</span>
        <input type="date" name="dateto" class="d-inline-block mx-2  my-1" style="height: 25px; width: 120px;"/>
    </div>
        
      <div class="d-inline col-sm-12 col-md-2  my-1">
        <input type="submit" class="d-inline-block  btn btn-success my-1"value="Summarise"/>
    </div>
  </div>
    </form>
    </div>
   
    
   

      <table class="table table-striped table-light m-auto">
        <thead class="thead-dark">
        
          <th scope="col">alert name</th>
          <th scope="col">alert type</th>
          <th scope="col">End Point</th>
          <th scope="col">Dev Response</th>
          <th scope="col">Edit / Delete</th>
          
          
        </thead>
        <tbody>
      <% alerts.forEach((alert) => { %>
        <tr>
        <td style="width: 15%;"><%= alert.alertname %></td>
        <td style="width: 15%;"><%= alert.alerttype %></td>
        <td style="width: 30%; white-space: pre-line;"><%= alert.endpoint %></td>
        <td style="width: 30%;"><%= alert.dev_response %></td>
       <td style="width: 10%;">
         <div class="d-inline-block">
        <form action="/edit-alert" method="GET" enctype="multipart/form-data" onsubmit="return confirm('Are you sure to edit?');">
          <input type="hidden" name="id" value="<%= alert._id %>">
        <button type="submit"><i class="fa fa-pencil" aria-hidden="true"></i></button></form>
      </div>
      <div class="d-inline-block">
        <form action="/delete" method="GET" enctype="multipart/form-data" onsubmit="return confirm('Are you sure to delete?');" >
          <input type="hidden" name="id" value="<%= alert._id %>">
        <button type="submit"><i class="fa fa-trash-o" aria-hidden="true"></i></button></form>
      </div>
       </td>
      </tr>
      <% });%>
        </tbody>
      </table>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
  </body>
</html>
